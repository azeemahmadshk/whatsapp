<%= form_for(@room, remote:true) do |form| %>

  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
    <% if current_user.present? %>
    <%= form.text_field :owner_id, value: current_user.id,  class: 'hidden_field' %> 
    <%end%>
  </div>

  <div class="actions">
    
    <%= form.submit value:"Create Group", class: "btn btn-primary send_message" %>
  </div>
<% end %>

<style type="text/css">
  .hidden_field{
    display: none;
  }
</style>