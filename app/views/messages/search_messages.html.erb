<p id="notice"><%= notice %></p>
<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>
 <div class=" d-flex flex-row justify-content-center" >
  <div class=" " >
  <h1 class=" text-danger"> Below are searched messages in <%= @room.name %> : </h1>
    <% if @search_messages.present? %>
       <% @search_messages.each do |search_message| %>
       <table>
         <tr>
         <% if search_message.sender_id.present? && search_message.sender_id != 0 %>
         <%=  User.find_by_id(search_message.sender_id).email %>
         <% end %> 
          : 
         <%= search_message.description %>
         </tr>
       </table>
      <%end%>
      <%else%>
      <%= @notice %>
      <%end%>
 </div>
<style>
.hidden_field{
    display: none !important;
  }
</style>